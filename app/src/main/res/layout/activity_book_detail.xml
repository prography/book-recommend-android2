<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BookDetailActivity">

        <include layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/book_img"
            android:layout_width="158dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/like_btn"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_like_empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/read_btn"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="#eceaea"
            android:text="책 정보"
            android:id="@+id/booknumber"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_title"
            android:padding="8dp"
            android:layout_gravity="center"
            android:text="dummy_1_1"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


        <TextView
            android:id="@+id/book_author"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dummy_writer"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_tags"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tags"
            android:textSize="18dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="#eceaea"
            android:text="줄거리"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="#eceaea"
            android:text="다른 책 추천"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/otherBookRecommend_InBookDetail_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</ScrollView>