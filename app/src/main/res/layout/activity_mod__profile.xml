<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context=".Mod_ProfileActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/icon_size_with_padding"
            android:layout_height="@dimen/icon_size_with_padding"
            android:layout_marginLeft="@dimen/side_margin"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_back"
            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_toolbar"
            style="@style/TextTheme"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/side_margin_small"
            android:layout_marginRight="@dimen/side_margin"
            android:gravity="center_vertical"
            android:text="MY PROFILE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <ImageButton
        android:id="@+id/img_profile"
        android:padding="0dp"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />

    <TextView
        android:id="@+id/profile_ID"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="50sp"
        app:layout_constraintStart_toEndOf="@id/img_profile"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:text="  이름 바꾸기"
            android:id="@+id/edit_name"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            />
        <Button
            android:text="  자기 소개 바꾸기"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:background="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:text="  연결 계정 관리"
            android:textColor="#8f8f8f"
            />

        <Button
            android:text="  페이스북 로그아웃"
            android:id="@+id/facebook_logout"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            />

        <Button
            android:text="  카카오톡 로그아웃"
            android:textSize="25sp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            />

        <Button
            android:text="  탈퇴 요청"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>